<style lang="scss">
$font-sans: 'Open Sans', sans-serif;
$purple: #4C5FD5;
$light-purple: #dadbf1;
$black: #000000;
$white: #ffffff;
$tablet: 768px;
$desktop: 1200px;

// Generated from https://www.joshwcomeau.com/shadow-palette/
@mixin default-shadow {
  $shadow-color: hsl(238deg 18% 56% / 0.36);

  box-shadow:
    0px 0.3px 0.3px $shadow-color,
    0px 1.1px 1.2px -0.8px $shadow-color,
    0px 2.8px 3.1px -1.7px $shadow-color,
    0.1px 6.8px 7.7px -2.5px $shadow-color;
}

html,
body {
  font-family: $font-sans;
}

a {
  color: $purple;
  text-decoration: none;

  &:hover,
  &:focus {
    text-decoration: underline;
  }
}

.bg-light-purple {
  background-color: $light-purple;
}

.bg-white {
  background-color: $white;
}

h1,
h2,
h3 {
  margin: 0;
}

ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

nav,
footer {
  background-color: $black;
  color: $white;

  a {
    color: $white;
  }
}

.button-link {
  display: inline-block;
  padding: 10px 24px;
  font-size: 1.5rem;
  background-color: $purple;
  color: white;
  border-radius: 6px;

  &--outline {
    background-color: $black;
    border: 1px solid white;
  }
}

.nav {
  font-size: 20px;
  position: sticky;
  top: 0;
  z-index: 10;

  $nav: &;

  &__content {
    display: flex;
    align-items: center;
    align-content: center;
    justify-content: space-between;
    padding: 1.5rem 1rem;

    @media screen and (min-width: 992px) {
      max-width: 1200px;
      margin: 0 auto;
    }
  }


  &__logo {
    strong {
      font-weight: 600;
    }
  }

  &__links {
    &--mobile {
      display: flex;
      gap: 0.5rem;

      @media screen and (min-width: $tablet) {
        display: none;
      }
    }

    &--desktop {
      display: none;

      @media screen and (min-width: $tablet) {
        display: flex;
      }

      .button-link:first-child {
        margin-right: 1rem;
      }
    }

    button {
      background-color: transparent;
      border-color: transparent;
      color: $white;
      padding: 0;
      margin: 0;
      cursor: pointer;

      svg {
        fill: $white;
        transition: transform 0.2s ease-in-out;
      }

      &:hover {
        svg {
          transform: scale(1.2);
        }
      }
    }
  }
}

.hero {
  text-align: center;
  padding: 6rem 1rem;

  h1 {
    font-weight: 600;
    font-size: 3.5rem;
  }

  form {
    @include default-shadow();

    display: block;
    position: relative;
    margin-top: 2.75rem;

    $form: &;

    @media screen and (min-width: 768px) {
      max-width: 700px;
      margin-left: auto;
      margin-right: auto;
    }

    input {
      display: block;
      border-radius: 4px;
      border: 1px solid $black;
      width: 100%;
      padding: 1.2rem 1rem;
      font-size: 1.25rem;
      font-weight: 400;

      &:hover,
      &:focus-within {
        border-color: $purple;
        outline-color: $purple;

        #{$form} svg {
          fill: $purple;
        }
      }
    }

    button {
      background-color: transparent;
      border-color: transparent;
      cursor: pointer;
      position: absolute;
      top: 50%;
      right: 1rem;
      transform: translateY(-50%);
      margin: 0;
      padding: 0;
      width: 28px;
      height: 28px;

      &:hover,
      &:focus {
        svg {
          fill: $light-purple;
        }
      }
    }
  }
}

.container {
  display: flex;
  flex-wrap: wrap;
  padding: 100px 15px;
  max-width: 600px;
  margin: 0 auto;
  gap: 0 2rem;

  @media screen and (min-width: 768px) {
    max-width: 900px;
  }

  @media screen and (min-width: 992px) {
    max-width: 1200px;
    gap: 0 2.5rem;
  }
}

.feature-card {
  display: flex;
  margin-bottom: 4rem;
  gap: 2rem;

  &:last-child {
    margin-bottom: 0;
  }

  @media screen and (min-width: 768px) {
    flex: 1 1 50%;
    max-width: calc(50% - 1rem);
  }

  @media screen and (min-width: 992px) {
    max-width: calc(50% - 1.25rem);
    gap: 2.5rem;
  }

  &__content {
    flex: 1;

    h2,
    p {
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }

    p {
      line-height: 1.3;
    }
  }

  &__img {
    flex-shrink: 1;
    max-width: 80px;

    & > * {
      max-width: 100%;
    }
  }

  &__link {
    display: flex;
    align-content: center;
    font-size: 1.25rem;

    &__icon {
      fill: $light-purple;
    }
  }
}
</style>
